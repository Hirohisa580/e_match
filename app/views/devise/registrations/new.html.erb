  
  <div class="top-page">  
    <%=render "shared/header/"%>
  </div>
  <div class="registration-main"> 
    <div class="regitation-border">
      <%= form_with model: @user, url: user_registration_path, method: :post, local: true do |f| %>
        <div class="field">
          <label >メールアドレス<br /><label >
          <%= f.email_field :email, autofocus: true, class: "form-control"%>
        </div>

        <div class="field">
          <label >パスワード<br /><label >
          <%= f.password_field :password, class: "form-control", placeholder: "6文字以上"  %>
        </div>

        <div class="field">
          <label >パスワード（確認）<br /><label >
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>

        <div class="field">
          <label >名字（漢字）<br /><label >
          <%= f.text_field :last_name, placeholder: "例) 田中", class: "form-control" %>
        </div>

        <div class="field">
          <label >名前（漢字）<br /><label >
          <%= f.text_field :first_name, placeholder: "例) 太郎", class: "form-control"  %>
        </div>

        <div class="field">
          <label >名字 (ふりがな)<br /><label >
          <%= f.text_field :last_name_ruby, placeholder: "例) たなか", class: "form-control"  %>
        </div>

        <div class="field">
          <label >名前 (ふりがな)<br /><label >
          <%= f.text_field :first_name_ruby, placeholder: "例) たろう", class: "form-control"  %>
        </div>

        <div class="field">
          <label >電話番号<br /><label >
          <%= f.text_field :phone_number, placeholder: "ハイフン(-)不要", class: "form-control"  %>
        </div>

        <div class="actions signup">
          <%= f.submit "サインアップ", class: "btn btn-success btn-lg mb-3"%>
        </div>
      <% end %>
    </div>
  </div>