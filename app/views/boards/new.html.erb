  <div class="top-page">
    <%=render "shared/header"%>
  </div>
  <div class="all__main">
    <div class="container">
      <div class="new__topic">
        <div class="board__form">
          <h2>掲示板作成</h2>
          <%= form_with model:@board, class: "form__border",local: true do |f|%>
            <div>
              <label for="board_genre_one_id">ジャンル（必須）<br /></label>
              <%= f.collection_select(:genre_one_id, GenreOne.all, :id, :name, {}, class: "form-control") %>        
            </div>

            <div>
              <label for="board_name">タイトル（必須）<br /></label>
              <%= f.text_field :name, class: "form-control" %>          
            </div>

            <div>
              <label for="exampleFormControlTextarea1">説明（必須）<br /></label>
              <%= f.text_area :explanation, class: "form-control", id: "exampleFormControlTextarea1" %>
            </div>

            <div class="board__submit" >
              <%= f.submit "作成", class: "btn btn-success btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>